{
  "name": "farm-activity-entry",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/core": "10.0.15",
    "babel-plugin-emotion": "10.0.15",
    "body-parser": "^1.19.0",
    "connect-mongo": "3.0.0",
    "dotenv": "^8.1.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "httpntlm": "^1.7.6",
    "mongoose": "5.7.3",
    "normalize.css": "^8.0.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "prettier": "1.18.2",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-router-dom": "5.0.1",
    "react-scripts": "3.1.1",
    "typescript": "3.5.3"
  },
  "scripts": {
    "start:web": "react-scripts start",
    "start:api": "nodemon --watch api --ext .ts,.js --exec 'ts-node --project api/tsconfig.json api/index.ts'",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "e2e": "cypress open"
  },
  "proxy": "http://localhost:3001",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "projects": [
      {
        "displayName": "api",
        "testMatch": [
          "<rootDir>/api/**/*.test.{js,jsx,ts,tsx}"
        ],
        "collectCoverageFrom": [
          "<rootDir>/api/**/*.{js,jsx,ts,tsx}",
          "!<rootDir>/node_modules/"
        ]
      },
      {
        "displayName": "web",
        "testMatch": [
          "<rootDir>/src/**/*.test.{js,jsx,ts,tsx}"
        ],
        "collectCoverageFrom": [
          "<rootDir>/src/**/*.{js,jsx,ts,tsx}",
          "!<rootDir>/node_modules/"
        ]
      }
    ]
  },
  "devDependencies": {
    "@testing-library/cypress": "4.1.0",
    "@testing-library/jest-dom": "4.0.0",
    "@testing-library/react": "9.1.1",
    "@types/body-parser": "^1.17.1",
    "@types/connect-mongo": "0.0.43",
    "@types/dotenv": "^6.1.1",
    "@types/express-session": "^1.15.14",
    "@types/faker": "4.1.5",
    "@types/fetch-mock": "7.3.1",
    "@types/jest": "24.0.17",
    "@types/node": "12.7.1",
    "@types/passport": "^1.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/react": "16.9.1",
    "@types/react-dom": "16.8.5",
    "@types/react-router-dom": "4.3.4",
    "cypress": "3.4.1",
    "faker": "4.1.0",
    "fetch-mock": "7.3.9",
    "husky": "3.0.3",
    "lint-staged": "9.2.1",
    "node-fetch": "2.6.0",
    "nodemon": "^1.19.1",
    "ts-node": "8.4.1"
  }
}
