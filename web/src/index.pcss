@tailwind base;

@tailwind components;

@tailwind utilities;

.flash-appear,
.flash-enter {
  opacity: 0;
}

.flash-appear-active,
.flash-enter-active {
  opacity: 1;
  transition: opacity 200ms;
}

.flash-exit {
  opacity: 1;
}
.flash-exit-active {
  opacity: 0;
  transition: opacity 200ms;
}

.no-spinner::-webkit-outer-spin-button,
.no-spinner::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}
